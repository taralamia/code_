{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run C++ (Any Folder)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ -std=c++17 -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "silent",
        "echo": false,
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
